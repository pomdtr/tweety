{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "key": {
            "type": "string"
        },
        "theme": {
            "type": "string",
            "description": "The color theme for the terminal."
        },
        "themeDark": {
            "type": "string",
            "description": "The dark theme variant."
        },
        "env": {
            "type": "object",
            "description": "Environment variables for all commands.",
            "patternProperties": {
                "^[a-zA-Z_]+[a-zA-Z0-9_]*$": {
                    "type": "string"
                }
            }
        },
        "defaultProfile": {
            "type": "string",
            "description": "The default profile to use on the root endpoint."
        },
        "profiles": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/profile"
            }
        }
    },
    "definitions": {
        "profile": {
            "type": "object",
            "required": [
                "command"
            ],
            "properties": {
                "command": {
                    "type": "string",
                    "description": "The command path."
                },
                "args": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "The arguments for the command."
                },
                "env": {
                    "type": "object",
                    "description": "The environment variables for the command.",
                    "patternProperties": {
                        "^[a-zA-Z_]+[a-zA-Z0-9_]*$": {
                            "type": "string"
                        }
                    }
                },
                "cwd": {
                    "type": "string",
                    "description": "The working directory for the command. If omitted, the home directory is used."
                },
                "title": {
                    "type": "string"
                },
                "favicon": {
                    "type": "string",
                    "format": "uri",
                    "pattern": "^https?://"
                }
            }
        }
    }
}
